{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.0",
  "description" : "__MSG_extDescription__",
  "default_locale": "en",

  "icons": {
    "48": "images/icon.png"
  },

  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": "images/icon.png",
    "default_title": "__MSG_tooltip__"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
   ],

  "permissions": [
    "contextMenus"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  }
}
